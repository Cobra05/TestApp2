<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".fragments.FragmentSettings"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/colorOnSecondary"
        app:titleTextColor="@color/white"
        app:title="Настройки"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:subtitle="Выбрать дневную или ночную тему"
        app:title="Темы"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/theme_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar1"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:subtitle="Установить или сбросить дату счётчика"
        app:title="Счётчик"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/counterico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/counter_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calendarico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/calendar_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:subtitle="Сбросить дни календаря"
        app:title="Календарь"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/diaryico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/diary_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar3"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:subtitle="Очистить дневник"
        app:title="Дневник"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/protectionico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/protect_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar4"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:subtitle="Установить защитный пароль"
        app:title="Пароль"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/about_programm_ico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/about_ico"
        app:tint="#00000000"
        app:tintMode="add" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/about_programm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/themeico"
        android:background="?attr/backgroundColor"
        app:title="О Программе" />


</RelativeLayout>