<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3469d3</item>
        <item name="colorPrimaryVariant">#4476AE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3469d3</item>
        <item name="colorSecondaryVariant">#003fa1</item>
        <item name="colorOnSecondary">@color/primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="haloColor">@color/recordPBcolor</item>
        <item name="motionProgress">@color/targetPBcolor</item>
        <item name="backgroundColor">#fff</item>
        <item name="customColorValue">@color/main_color</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <item name="tsquare_dayTextColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="LightTheme.Fullscreen" parent="LightTheme">
        <item name="android:actionBarStyle">@style/Widget.LightTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TestApp2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>