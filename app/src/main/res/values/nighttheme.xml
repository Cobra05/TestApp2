<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" >

    <style name="NightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">#2A2A2A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <item name="android:navigationBarColor">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="haloColor">@color/recordPBcolornight</item>
        <item name="motionProgress">@color/targetPBcolornight</item>
        <item name="backgroundColor">#202020</item>
        <item name="customColorValue">#B96A6A6A</item>
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="tsquare_dayTextColor">@color/black</item>
        <item name="tsquare_headerTextColor">@color/white</item>
        <item name="tsquare_titleTextColor">@color/white</item>
